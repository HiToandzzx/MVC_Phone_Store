@model HSMobile.Models.UserAccount

@{
    ViewBag.Title = "Xóa tài khoản - Hoang Son Mobile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container w-50 mb-5">
    <div class="card p-5" style="border-radius: 20px; box-shadow: rgba(110, 110, 121, 0.3) 0px 7px 29px 0px">
        <p class="text-center" style="font-size: 20px; font-weight: bold; color: red">BẠN CÓ CHẮC MUỐN XÓA TÀI KHOẢN?</p>
        <div class="row p-3" style="margin-left: 50px">
            <div class="row">
                <div class="col" style="font-weight: bold">
                    Tên tài khoản:
                </div>
                <div class="col">
                    @Html.DisplayFor(model => model.UserName)
                </div>
            </div>
            <div class="row">
                <div class="col" style="font-weight: bold">
                    Mật khẩu:
                </div>
                <div class="col">
                    @Html.DisplayFor(model => model.Password)
                </div>
            </div>
        </div>
        <div class="mt-4 text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Xóa" class="btn btn-warning w-25" style="padding: 10px 25px 15px 20px;" />
                <a href="@Url.Action("Index", "UserAccounts/Index")" class="btn btn-outline-warning" style="margin-left: 20px; padding: 10px 25px 15px 20px; color: #111">Trở lại</a>
            }
        </div>
    </div>
</div>